<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>LoginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>bookmakerBean</managed-bean-name>
        <managed-bean-class>BookmakerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>rankingBean</managed-bean-name>
        <managed-bean-class>RankingBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>bettorBean</managed-bean-name>
        <managed-bean-class>BettorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>adminstratorBean</managed-bean-name>
        <managed-bean-class>AdminstratorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>upcomingMatchesBean</managed-bean-name>
        <managed-bean-class>UpcomingMatchesBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.register}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createOdd.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{bookmakerBean.createOdd}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/upcomingMatches.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/betting_s2.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{bettorBean.betting}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/upcomingMatches.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/manageUser.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{adminstratorBean.updateUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/manageUser.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/upcomingMatches.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{upcomingMatchesBean.betThisMatch}</from-action>
            <from-outcome>betting</from-outcome>
            <to-view-id>/betting_s2.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/upcomingMatches.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{upcomingMatchesBean.createOdd}</from-action>
            <from-outcome>newodd</from-outcome>
            <to-view-id>/createOdd.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{adminstratorBean.updateMatchesResult}</from-action>
            <from-outcome>completed</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{adminstratorBean.syncMatches}</from-action>
            <from-outcome>completed</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>